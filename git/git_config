[color]
  diff = auto
  status = auto
  branch = auto
  ui = 1
[core]
  excludesfile = ~/.gitignore
  editor = atom
  autocrlf = input
[format]
  pretty = %Cblue%h%Creset %Cgreen[%cr]%Creset (%an) %s
[alias]
  b = branch -a -v
  c = commit -m
  a = add
  ap = add -p
  co = checkout
  d = diff --word-diff
  pl = pull --rebase
  ps = push
  s = status --short
  merged = log --date-order --tags --simplify-by-decoration --pretty=format:\"%Cblue%h %Cgreen%<|(20)[%cr]%Creset %C(auto)%<|(41)%d %s\"
[user]
  name = Mat Pataki
  email = matpataki@gmail.com
[credential]
  helper = osxkeychain
[help]
  autocorrect = 1
[push]
  default = current
[remote "origin"]
	fetch = +refs/pull/*/head:refs/remotes/origin/pull/*
